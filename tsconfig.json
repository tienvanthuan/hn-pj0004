{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [
      "ES2015",
      "ES2015.promise",
      "ES2017",
      "ES2017.Object",
      "ES2018",
      "ES2019",
      "ES2019.Object",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
  },
  "include": ["./assets/ts/**/*.ts"],
  "exclude": ["node_modules", "assets/ts/**/_*.ts"]
}
